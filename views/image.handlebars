<div class="panel panel-primary">
	<div class="panel-heading">
		<h2 class="panel-title">{{image.title}}</h2>
	</div>

	<div class="panel-body">
		<p>{{image.description}}</p>
		<div class="col-sm-12 text-center">
			<img src="/public/upload/{{image.filename}}" style="" class="img-thumbnail">
		</div>
	</div>

	<div class="panel-footer panel-default">
		<div class="row">
			<div class="col-sm-8">
				<button class="btn btn-success" id="btn-like" data-id="{{image.uniqueId}}">
					<i class="fa fa-heart"></i> Like
				</button>
				<strong class="likes-count">{{image.likes}}</strong>
				&nbsp; - &nbsp;
				<i class="fa fa-eye"></i> <strong>{{image.views}}</strong>
				&nbsp; - &nbsp;
				Posted: <em class="text-muted">{{timeago image.timestamp}}</em>
			</div>
			<div class="col-sm-4 text-right">
				<button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
					<i class="fa fa-times"></i>
				</button>
			</div>
		</div>
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		<div class="row">
			<div class="col-sm-8">
				<strong class="panel-title">Comments</strong>
			</div>
			<div class="col-sm-4 text-right">
				<button class="btn btn-default btn-sm" id="btn-comment" data-id="{{image.uniqueId}}">
					<i class="fa fa-comments-o"> Post Comment...</i>
				</button>
			</div>
		</div>
	</div>

	<div class="panel-body">
		<blockquote id="post-comment">
			<div class="row">		
				<form method="post" action="/images/{{image.uniqueId}}/comment">
					<div class="col-sm-12 form-group">
						<div class="col-sm-2">
							<label class="control-label" for="name">Name:</label>
						</div>
						<div class="col-sm-10">
							<input class="form-control" type="text" name="name">
						</div>
					</div>
					<div class="col-sm-12 form-group">
						<div class="col-sm-2">
							<label class="control-label" for="email">Email:</label>
						</div>
						<div class="col-sm-10">
							<input class="form-control" type="text" name="email">
						</div>
					</div>
					<div class="col-sm-12 form-group">
						<div class="col-sm-2">
							<label class="control-label" for="comment">Comment:</label>
						</div>
						<div class="col-sm-10">
							<textarea class="form-control" row="2" name="comment"></textarea>
						</div>
					</div>
					<div class="col-sm-12 form-group">
						<div class="col-sm-4 text-right pull-right">
							<button type="submit" class="btn btn-success" name="comment-btn" type="button">
								<i class="fa fa-comment"></i> Post
							</button>
						</div>
					</div>
				</form>
			</div>
		</blockquote>

		<ul class="media-list">
			{{#each comments}}
				<li class="media">
					<a href="#" class="pull-left">
						<img class="media-object img-circle" src="https://br.gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45">
					</a>
					<div class="media-body">
						{{comment}}<br>
						<strong class="media-heading">{{name}}</strong>
						<small class="text-muted">{{timeago timestamp}}</small>
					</div>
				</li>
			{{/each}}
		</ul>
	</div>

</div>