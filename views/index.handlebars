<div class="panel panel-primary">
	
	<div class="panel-heading">
		<h2 class="panel-title">Upload a image</h2>
	</div>
	
	<form method="post" action="/images" enctype="multpart/form-data">
		<div class="panel-body form-horizontal">

			<div class="form-group col-sm-12">
				<label class="col-sm-2 control-label" for="file">Browse:</label>
				<div class="col-sm-10">
					<input class="form-control" type="file" name="file" id="file">
				</div>
			</div>

			<div class="form-group col-sm-12">
				<label class="col-sm-2 control-label" for="title">Title:</label>
				<div class="col-sm-10">
					<input class="form-control" type="text" name="title">
				</div>
			</div>

			<div class="form-group col-sm-12">
				<label class="col-sm-2 control-label" for="description">Description:</label>
				<div class="col-sm-10">
					<textarea class="form-control" name="description" rows="2"></textarea>
				</div>
			</div>

			<div class="form-group col-sm-12">
				<div class="col-sm-12 text-right">
					<button type="submit" class="btn btn-success" id="login-btn" type="button">
						<i class="fa fa-cloud-upload"></i> Upload Image
					</button>
				</div>
			</div>

		</div>
	</form>

</div>

<div class="panel panel-default">
	
	<div class="panel-heading">
		<h2 class="panel-title">Newest images</h2>
	</div>

	<div class="panel-body">
		{{#each images}}
			<div class="col-sm-4">
				<a href="/images/{{uniqueId}}">
					<img src="/public/upload/{{filename}}" alt="{{title}}" style="width: 175px; height: 175px;" clas="img-thumbnail">
				</a>
			</div>
		{{/each}}
	</div>
</div>