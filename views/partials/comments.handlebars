<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Latest Comments</h3>
	</div>

	<div class="panel-body">
		<ul class="media-list">
			{{#each sidebar.comments}}
				<li class="media">
					<a href="/images/{{image.uniqueId}}">
						<img src="/public/upload/{{image.filename}}" class="media-object" style="width: 45px; height: 45px;">
					</a>
					<div class="media-body">
						{{comment}}<br>
						<strong class="media-heading">{{name}}</strong>
						<small class="text-muted">{{timeago timestamp}}</small>
					</div>
				</li>
			{{/each}}
		</ul>
	</div>
</div>